<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="nox.minesweeper.android"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<uses-permission android:name="com.android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT"/>
	<uses-permission android:name="com.android.permission.WRITE_EXTERNAL_STORAGE"/>

	<application android:label="@string/app_name" >

		<activity
			android:name="MainActivity"
			android:label="@string/app_name"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name="SelectGameActivity"></activity>
		<activity android:name="StatisticsActivity"></activity>
		<activity android:name="PlayActivity"></activity>

	</application>

</manifest> 


